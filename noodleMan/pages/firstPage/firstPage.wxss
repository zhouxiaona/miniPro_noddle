page{
  background-color: #f8f8f8; 
  font-size: 27rpx; 
  height: 100%; 
  width: 100%; 
  color:#333; 
  overflow: hidden;
  font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
.wrap{
  width: 100%;
  height: 100%;
}
/* 头部登录  */
.header{
  display: flex;
  padding:0 20rpx;
  height: 80rpx;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}
.header .loginBtn{
  font-weight: 600;
  color: #666;
}
.header .searchInp{
  width: 60%;
  border-radius: 50rpx;
  background-color: #f8f8f8;
  text-indent:40rpx;
  padding:5rpx 20rpx;
  font-size:0.7rem;
}
.header .searchInp input{
  text-indent: 10rpx;
  color: #333;
}
/* 首页导航栏  */
.navBar{
  height:73rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f3f4f5;
  padding: 0 20rpx;
  color: #333;
  font-weight: 500;
  position: relative;
}
.navBar .borderBottomSlide{
  position: absolute;
  top: 67rpx;
   left: 15rpx; 
  /* left: 180rpx; */
  /* left: 345rpx; */
  /* left: 510rpx; */
  /* left: 675rpx; */
  width: 65rpx;
  height: 5rpx;
  background-color: #f86442;
  transition: all .3s ease;
}
.items{
  background: #f8f8f8;
}
.liulan{
  padding: 0 20rpx;
  height: 111rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.liulanText{
  color:#999;
}
.liulanBtn{
  box-sizing: border-box;
  padding: 15rpx 50rpx;
  background-color: #fff;
  border-radius: 40rpx;
}
/*  分类头部 */
.top_line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-bottom: 15rpx;
}
.top_line .lis{
  width: 25%;
  display: flex;
  line-height: 94rpx;
  justify-content: center;
  align-items: center;
  border-right:1rpx solid #f8f8f8;
}
.top_line .lis image{
  width: 40rpx;
  height: 40rpx;
  margin:10rpx;
}
